@model IEnumerable<hrithvika.Models.custom_Gallery>

@{
    ViewBag.Title = "gallerytype";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<style>
    .dv {
        min-height: 400px;
    }

    .table a {
        color: #808080 !important
    }

    #image-gallery .modal-footer {
        display: block;
    }

    h1 {
        font-family: cardtitle !important;
    }

    .thumb {
        margin-top: 15px;
        margin-bottom: 15px;
    }

    a {
        color: #060606;
        text-decoration: none;
        
    }
</style>
@*<script src="~/Content/js/jquery.js"></script>*@
<script src="~/Content/js/customgallery.js"></script>

<div class="container-fluid">
    <div class="row">
        <img width="100%" style="filter:grayscale(100%)" src="~/Images/events.jpg" />
        <div class="telegram_dv_normal">
            " <b>1</b>  DAY  &nbsp;<b>1</b> MINUTE
            <br />
            FOR OUR BRAVE HEARTS
            <br />
            IS IT TOO MUCH TO ASK FOR ? "
            <br />

            <br />

        </div>
    </div>
    <div class="row d-none d-md-block  row_highlight">
        <div class="container">
            <div class="row">
                <div class="col-md-4 text-center">
                    <i style="color:#ff0000" class="fa fa-calendar fa-2x"></i> <a href="/Home/Events"> Events</a>
                </div>
                <div class="col-md-4 text-center">
                    <i style="color:#ff0000" class="fa fa-users fa-2x"> @Html.ActionLink("NGO's", "NGO", "People")</i>
                </div>
                <div class="col-md-4 text-center">
                    <i style="color:#ff0000" class="fa fa-heart fa-2x"> @Html.ActionLink("Enroll", "Create", "People")</i>
                </div>
            </div>
        </div>
    </div>
</div>
<div class="container-fluid">
    <div class="col-md-12 text-center">
        <br />
        <h1 class="text-center">
            GALLERY &nbsp;&nbsp;&nbsp;  <i class="fa fa-picture-o"> @Html.ActionLink("Images", "gallery")</i>
            <i class="fa fa-video-camera"> @Html.ActionLink("Videos", "galleryvideo")</i>
        </h1>

        <br />
        <div class="col-md-12 text-center">
            @Html.ActionLink("Articles", "gallerytype", "Home", new { type = "Articles" }, new { @class = "btn btn-primary" })
            @Html.ActionLink("Support", "gallerytype", "Home", new { type = "Support" }, new { @class = "btn btn-primary" })
           
            <br />
            <br />
            <br />
        </div>
        @*<form class="form-inline">
            <div class="input-group mx-auto" style="width:30%;">
                <input type="text" class="form-control" id="myInput" placeholder="Search by Name">
                <div class="input-group-append">
                    <button type="button" class="btn btn-secondary search"><i class="fa fa-search"></i></button>
                </div>
            </div>
        </form>*@
    </div>
</div>
<div class="container-fluid">
    <div class="col-md-12 text-center">
        <div class="row">
            @foreach (var item in Model)
            {

                <div class="col-lg-3 col-md-4 col-xs-6 thumb">
                    <div class="background_white">
                        <a class="thumbnail" href="#" data-image-id="" data-toggle="modal" data-title=""
                           data-image="@item.path"
                           data-target="#image-gallery">
                            <div style="max-height:250px;overflow-y:hidden">
                                <img class="img-thumbnail"
                                     src="@item.path"
                                     alt="@item.id" width="100%"  />
                            </div>
                        </a>
                    </div>
                </div>
                <br />
            }
            <div class="modal fade" id="image-gallery" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
                <div class="modal-dialog modal-lg">
                    <div class="modal-content mdl div_background">
                        <div class="modal-header">
                            <h4 class="modal-title" id="image-gallery-title"></h4>
                            <button type="button" class="close" data-dismiss="modal">
                                <span aria-hidden="true">×</span><span class="sr-only">Close</span>
                            </button>
                        </div>
                        <div class="modal-body">
                            <img id="image-gallery-image" class="img-responsive col-md-12" src="">
                        </div>
                        <div class="modal-footer">
                            <button type="button" class="btn btn-secondary float-left" id="show-previous-image">
                                <i class="fa fa-arrow-left"></i>
                            </button>
                            <button type="button" id="show-next-image" class="btn btn-secondary float-right">
                                <i class="fa fa-arrow-right"></i>
                            </button>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

</div>

<br />
