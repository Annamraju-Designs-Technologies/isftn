@model hrithvika.Models.custom_Gallery
@{
    ViewBag.Title = "manage Videos";
    Layout = "~/Views/Shared/_adminLayout.cshtml";
}

<div class="container-fluid">
    <div class="row">
        <img width="100%" style="filter:grayscale(100%)" src="~/Images/events.jpg" />
        <div class="telegram_dv_normal">
            " <b>1</b>  DAY  &nbsp;<b>1</b> MINUTE
            <br />
            FOR OUR BRAVE HEARTS
            <br />
            IS IT TOO MUCH TO ASK FOR ? "
            <br />

            <br />

        </div>
    </div>
    <div class="row d-none d-md-block  row_highlight">
        <div class="container">
            <div class="row">
                <div class="col-md-4 text-center">
                    <i style="color:#ff0000" class="fa fa-calendar fa-2x"></i> <a href="/Home/Events"> Events</a>
                </div>
                <div class="col-md-4 text-center">
                    <i style="color:#ff0000" class="fa fa-users fa-2x"> @Html.ActionLink("NGO's", "NGO", "People")</i>
                </div>

                <div class="col-md-4 text-center">
                    <i style="color:#ff0000" class="fa fa-heart fa-2x"> @Html.ActionLink("ENROLL", "Create", "People", null)</i>
                </div>
            </div>
        </div>
    </div>
</div>
<div class="container-fluid dv">

    <div class="row">
        <div class="col-md-3"></div>
        <div class="col-md-7">
            <br />
            <br />
            <h2 class="text-center">Add Videos for Gallery</h2>
            <br />
            <br />
            @using (Html.BeginForm("AddMainVideoGallery", "Admin", "post"))
            {
                @Html.AntiForgeryToken()

                <div class="form-horizontal">

                    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                    <div class="form-group">

                        <div class="col-md-10">
                            @Html.EditorFor(model => model.path, new { htmlAttributes = new { @class = "form-control", @placeholder = "Url" } })
                            @Html.ValidationMessageFor(model => model.path, "", new { @class = "text-danger" })
                        </div>
                    </div>
                    <br />
                    <div class="col-md-10">
                        @Html.DropDownList("category", (IEnumerable<SelectListItem>)ViewData["Dbtype"], "-- Select Category  --", new { required = true, @class = "form-control", @id = "Dbtype" })
                        @Html.ValidationMessageFor(model => model.category)
                    </div><br />
                    <div class="form-group">

                        <div class="col-md-10">
                            <div class="checkbox">
                                @Html.CheckBoxFor(model => model.isimportant) Is Important

                            </div>
                        </div>
                    </div>



                    <div class="form-group">
                        <div class="col-md-offset-2 col-md-10">
                            <input type="submit" value="Create" class="btn btn-default" />
                        </div>
                    </div>
                </div>
            }


        </div>
    </div>
</div>