@model hrithvika.Models.Custom_GalleryEvents

@{
    ViewBag.Title = "AddGallery";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<style>
    .dv {
        min-height: 400px;
    }
</style>
<div class="container-fluid">
    <div class="row">
        <img width="100%" style="filter:grayscale(100%)" src="~/Images/events.jpg" />
        <div class="telegram_dv_normal">
            " <b>1</b>  DAY  &nbsp;<b>1</b> MINUTE
            <br />
           FOR OUR BRAVE HEARTS
            <br />
            IS IT TOO MUCH TO ASK FOR ? "
            <br />
           
            <br />
             
        </div>
    </div>
    <div class="row d-none d-md-block  row_highlight">
        <div class="container">
            <div class="row">
                <div class="col-md-4 text-center">
                    <i style="color:#ff0000" class="fa fa-calendar fa-2x"></i> <a href="/Home/Events"> Events</a>
                </div>
                <div class="col-md-4 text-center">
                    <i style="color:#ff0000" class="fa fa-users fa-2x"> @Html.ActionLink("NGO's", "NGO", "People")</i>
                </div>
                <div class="col-md-4 text-center">
                    <i style="color:#ff0000" class="fa fa-heart fa-2x"> @Html.ActionLink("ENROLL", "Create", "People", null)</i>
                </div>
            </div>
        </div>
    </div>
</div>
<div class="container-fluid dv">
   
    <div class="row">
        <div class="col-md-12 text-center">
            <h2>Add Gallery</h2>

            @using (Html.BeginForm("AddGallery", "Admin", FormMethod.Post, new { enctype = "multipart/form-data" }))
            {
              
                @Html.AntiForgeryToken()
                @Html.ValidationSummary(true)
                <div class="form-horizontal">
                  
                   
                    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                    @Html.HiddenFor(model => model.eventid)
                    <div class="form-group">
                        <Label class="control-label col-md-2">Upload Images</Label>
                        <div class="col-md-10">
                            @Html.TextBoxFor(model => model.files, "", new { @type = "file", @multiple = "multiple" })
                            <p>
                                <br />
                                <input type="submit" class="btn btn-success" style="width: 200px; height: 40px" value="Save" />
                                @Html.ActionLink("Cancel", "EventsList", "Admin", null, new { @class = "btn btn-danger" })
                            </p>
                        </div>
                    </div>
                   
                </div>
            }

            <div>
                @Html.ActionLink("Back to List", "Index")
            </div>
        </div>
    </div>
</div>