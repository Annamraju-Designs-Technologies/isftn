@model IEnumerable<hrithvika.Models.custom_Team>

@{
    ViewBag.Title = "TeamList";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<style>
    .dv {
        min-height: 400px;
    }
</style>
<div class="container-fluid">
    <div class="row">
        <img width="100%" style="filter:grayscale(100%)" src="~/Images/events.jpg" />
        <div class="telegram_dv_normal">
            " <b>1</b>  DAY  &nbsp;<b>1</b> MINUTE
            <br />
           FOR OUR BRAVE HEARTS
            <br />
            IS IT TOO MUCH TO ASK FOR ? "
            <br />
           
            <br />
             
        </div>
    </div>
    <div class="row d-none d-md-block  row_highlight">
        <div class="container">
            <div class="row">
                <div class="col-md-4 text-center">
                    <i style="color:#ff0000" class="fa fa-calendar fa-2x"></i> <a href="/Home/Events"> Events</a>
                </div>
                <div class="col-md-4 text-center">
                    <i style="color:#ff0000" class="fa fa-users fa-2x"> @Html.ActionLink("NGO's", "NGO", "People")</i>
                </div>
                <div class="col-md-4 text-center">
                    <i style="color:#ff0000" class="fa fa-heart fa-2x"> @Html.ActionLink("ENROLL", "Create", "People", null)</i>
                </div>
            </div>
        </div>
    </div>
</div>
<div class="container-fluid dv">
    <div class="row">
        <div class="col-md-12 text-center">
            <h2>Team List</h2>

            <p>
                @Html.ActionLink("Create New Team", "AddTeam", null, new { @class = "btn btn-success" })
            </p>
            <table class="table">
                <tr>
                    <th>
                        @Html.DisplayNameFor(model => model.title)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.link)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.img_url)

                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.createdon)
                    </th>
                    <th>Type</th>
                    <th></th>
                </tr>

                @foreach (var item in Model)
                {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.title)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.link)
                </td>
                <td>
                    <img src="@item.img_url" width="70" />
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.createdon)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.type)
                </td>
                <td>
                    @Html.ActionLink("Delete", "deleteTeam", new { id = item.id }, new { @class = "btn btn-danger" })
                </td>
                <td>
                    @Html.ActionLink("Edit", "AddTeamEdit", new { id = item.id }, new { @class = "btn btn-danger" })
                </td>

            </tr>
                }

            </table>
        </div>
    </div>
</div>

