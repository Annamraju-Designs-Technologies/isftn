@model PagedList.IPagedList<hrithvika.Models.Custom_People>

@using PagedList.Mvc;
@{
    ViewBag.Title = "ListofSubscribers";
    Layout = "~/Views/Shared/_adminLayout.cshtml";
}
<style>
    table tr td {
    font-size:14px!important}
    
</style>
<link href="~/Content/PagedList.css" rel="stylesheet" />

<div class="container-fluid dv">
    <br />
    <div class="row">
        <div class="col-md-4">
            
        </div>
        <div class="col-md-4">
            <h1>List of Subscibers</h1>
        </div>
        <div style="color:#0094ff" class="col-md-4 text-center"><h4>
     @using (Html.BeginForm("Export", "Admin", FormMethod.Post))
    {
        <input type="submit" class="btn btn-primary" value="Records: @ViewBag.count Export" />
    }
</h4></div>
    </div>

    <br />
    <div class="row">
        <div class="col-md-12 text-center">

            <table class="table tbl">
                <tr>
                    <th>
                        Name
                    </th>
                    <th>
                        Email
                    </th>
                    <th>
                        Phone
                    </th>
                    <th>
                        State
                    </th>
                    <th>
                        Country
                    </th>
                    <th>
                        Createdon
                    </th>
                    <th>
                        Is Volunteer
                    </th>

                    <th></th>
                </tr>

                @foreach (var item in Model)
                {
                    <tr>
                        <td>
                            @Html.DisplayFor(modelItem => item.Name)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Email)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Phone)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.State)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Country)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Createdon)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.isactive)
                        </td>


                    </tr>
                }

            </table>
            <div class="page">
                Page @(Model.PageCount < Model.PageNumber ? 0 : Model.PageNumber) of @Model.PageCount
                @Html.PagedListPager(Model, Page_No => Url.Action("ListofSubscribers", "Admin", new { Page_No }, null))
            </div>
        </div>

    </div>
</div>

