@model IEnumerable<hrithvika.Models.Custom_venue>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<script src="~/Content/js/customgallery.js"></script>

<style>
    .bgdiv h5 {
        font-family: 'customfontbold';
        opacity: 0.7
    }

    body {
        background: #f7f7f7
    }

    .right {
    }

    a {
        color: #060606;
        text-decoration: none;
    }

    .card {
        padding: 10px;
        height: 250px;
    }
</style>

<div class="container-fluid">
    <div class="row">
        <img style="opacity:0.9" width="100%" src="~/Images/venue.jpg" />
        <div class="telegram_dv_normal">
            " <b>1</b>  DAY  &nbsp;<b>1</b> MINUTE
            <br />
            HOW EVER WE ARE
            <br />
            IS IT TOO MUCH TO ASK FOR ? "
            <br />

            <br />

        </div>
    </div>
    <div class="row d-none d-md-block  row_highlight">
        <div class="container">
            <div class="row">
                <div class="col-md-4 text-center">
                    <i style="color:#ff0000" class="fa fa-calendar fa-2x"></i> <a href="/Home/Events"> Events</a>
                </div>
                <div class="col-md-4 text-center">
                    <i style="color:#ff0000" class="fa fa-users fa-2x"> @Html.ActionLink("NGO's", "NGO", "People")</i>
                </div>
                <div class="col-md-4 text-center">
                    <i style="color:#ff0000" class="fa fa-heart fa-2x"> @Html.ActionLink("Enroll", "Create", "People")</i>
                </div>
            </div>
        </div>
    </div>
</div>
<br /><br />
<div class="container">
    <div class="row">
        <div class="col-md-12">

            <br />
            <div style="text-align:center">
                @Html.ActionLink("Add Venue", "Create", "Venue", null, new { @class = "btn btn-primary loginbtn" })
            </div>
            <br />

        </div>
    </div>
</div>
<div class="container">
    <div class="row">
        <div class="col-md-12 text-center">
            <div class="row">
                <div class="col-md-3">

                </div>
                <div class="col-md-7">
                    <table style="width:100%">
                        <tr>
                            <td style="text-align:right"><input type="text" id="txtsearch" placeholder="Serch by Venue or Address or Location" class="form-control" /></td>
                            <td class="text-left"><button style="background-color:#fe5d18!important" id="btnsearch" class="loginbtn btn btn-primary">Search</button></td>
                        </tr>
                    </table>
                </div>
            </div>
            <br />
            <div class="row">
                @foreach (var item in Model)
                {

                    <div class="col-lg-4 col-md-4 col-xs-6 thumb">
                        <div class="card">
                            <label style="color:#fe5d18!important;font-size:16px!important;font-weight:300!important;text-transform:uppercase!important"><b> @item.venue_area </b></label>
                            <hr />
                            <p>
                                @item.address
                            </p>
                            <table style="padding:5px;">
                                <tr>
                                    <td style="text-transform:uppercase!important"><i class="fa fa-user"></i>&nbsp; @item.NAME</td>

                                </tr>
                                <tr>

                                    <td> <i class="fa fa-phone"></i>&nbsp; @item.phone</td>
                                </tr>

                                @if (item.fblink != null)
                                {
                                    <tr>

                                        <td> <a target="_blank" href="@item.fblink"><i class="fa fa-facebook"></i></a></td>
                                    </tr>
                                }


                            </table>


                        </div>


                        <br /><br />
                    </div>
                    <br />
                    <br />

                }
            </div>
        </div>
    </div>
</div>
<div class="modal fade" id="image-gallery" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
    <div class="modal-dialog modal-lg">
        <div class="modal-content mdl div_background">
            <div class="modal-header">
                <h4 class="modal-title" id="image-gallery-title"></h4>
                <button type="button" class="close" data-dismiss="modal">
                    <span aria-hidden="true">×</span><span class="sr-only">Close</span>
                </button>
            </div>
            <div class="modal-body">
                <img id="image-gallery-image" class="img-responsive col-md-12" src="">
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary float-left" id="show-previous-image">
                    <i class="fa fa-arrow-left"></i>
                </button>
                <button type="button" id="show-next-image" class="btn btn-secondary float-right">
                    <i class="fa fa-arrow-right"></i>
                </button>
            </div>
        </div>
    </div>
</div>
<br />
<br />
<script>
    $(function () {
        $("#btnsearch").click(function () {
            var getvalue = $("#txtsearch").val();
            window.location = "/Venue/Index?search=" + getvalue;
        });
    });
</script>