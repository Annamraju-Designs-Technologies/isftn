@model hrithvika.Models.Custom_Donation

@{
    ViewBag.Title = "Donations";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<style>
    body {
        background: url('../Images/organizers_banner.jpg')no-repeat !important;
        background-size: cover !important;
        background-attachment: fixed !important;
        letter-spacing: 0px !important
    }

    input {
        background: #ebebeb !important
    }

        input:focus {
            background: #fff !important
        }

    .field-validation-error {
        color: #f00
    }
</style>
<br />
<br />
<br />
<br />
<div class="display_desktop">

</div>

<div class="container" style="background:#fff;text-align:center" id="form">
    <div class="insidecontainer">
        <div class="row" style="border:1px solid #ebebeb;text-align:center">

            <div class="col-md-12">
                <br /><br />
                <h5>DO FOR THE NATION…..DONATION</h5>
                <br />
                <br />
                <h1 class="text-center"> I STAND FOR THE NATION is a trust having a strong objective towards the support of the Brave Hearts</h1>
                <br />
                <br />
                <p>
                    Each penny collected on behalf of this trust will be supported towards to the jawan welfare. So, folks ‘Do for the nation’ which we call it as Donation
                </p>
                <br />
                <div class="text-left">
                    <h3 class="text-left">Bank Details</h3>
                    <br />
                    <p>Account Number: <b> 8213346113 </b></p>
                    <p>Name of Account: <b> I STAND FOR THE NATION </b></p> 
                    <p>IFSC: <b> KKBK0007533 </b></p>
                    <h3>OR </h3>
                </div>
                <br />
               <h2>For Online Transaction</h2>
                <div class="row">
                    <div class="col-md-12">
                        @if (@ViewBag.success != null)
                        {
                            <label class="lblwar text-center">@ViewBag.success</label>
                        }
                    </div>
                </div>

                @using (Html.BeginForm("Index", "Donations", "Post"))
                {
                    @Html.ValidationSummary(true)
                    <div class="row">

                        <div class="col-md-12">
                            <div class="editor-field">
                                @Html.TextBoxFor(model => model.NAME, new { @class = "form-control", @placeholder = "Name*" })
                                @Html.ValidationMessageFor(model => model.NAME)
                            </div>
                        </div>
                    </div>
                    <br />
                    <div class="row">

                        <div class="col-md-6">
                            <div class="editor-field">
                                @Html.TextBoxFor(model => model.email, new { @class = "form-control", @placeholder = "Email" })
                                @Html.ValidationMessageFor(model => model.email)
                                <br />
                            </div>
                        </div>

                        <div class="col-md-6">
                            <div class="editor-field">
                                @Html.TextBoxFor(model => model.phone, new { @class = "form-control", @placeholder = "Phone*" })
                                @Html.ValidationMessageFor(model => model.phone)  <br />
                            </div>
                        </div>
                    </div>
                    <div class="row">

                        <div class="col-md-6">
                            <div class="editor-field">
                                @Html.TextAreaFor(model => model.address, new { @class = "form-control", @placeholder = "Address*" })
                                @Html.ValidationMessageFor(model => model.address)  <br />
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="editor-field">
                                @if (ViewData["Dbcountry"] != null)
                                {
                                    @Html.DropDownList("country", (IEnumerable<SelectListItem>)ViewData["Dbcountry"], "-- Select Country  --", new { required = true, @class = "form-control", @id = "Dbcountry" })
                                    @Html.ValidationMessageFor(model => model.country)
                                }

                            </div>
                        </div>
                    </div>
                    <br />
                   
                    <div class="row">
                        <div class="col-md-8">
                            <div class="editor-field">
                                @Html.TextBoxFor(model => model.amount, new { @class = "form-control", placeholder = "Amount" })
                                @Html.ValidationMessageFor(model => model.amount)
                            </div>
                        </div>
                        <div class="col-md-4 text-left">
                            <input type="submit" class="btn btn-success loginbtn" style="width: 100%" value="Donate" />  <br /><br />
                            <i>*Required Fields</i>

                        </div>

                    </div>
                }
                <br />
                <br />

            </div>
        </div>
    </div>
</div>

