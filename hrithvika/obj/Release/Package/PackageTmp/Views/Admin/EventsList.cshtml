@model IEnumerable<hrithvika.Models.Custom_Events>

@{
    ViewBag.Title = "EventsList";
    Layout = "~/Views/Shared/_adminLayout.cshtml";
}

<style>
    .dv {
        min-height: 400px;
    }
    .table a {
        color: #808080 !important
    }
</style>

<div class="container-fluid dv">

    <div class="row">
        <div class="col-md-12 text-center">
            <h2>Manage Events</h2>
            <p>
                @Html.ActionLink("Create New", "Create",null,new {@class="btn btn-success" })
            </p>
            <table class="table">
                <tr>
                    <th>
                        Title
                    </th>
                    <th>
                        Image
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Createdon)
                    </th>
                    <th>Actions</th>
                </tr>

                @foreach (var item in Model)
                {
                    <tr>
                        <td>
                            @Html.DisplayFor(modelItem => item.title)
                        </td>
                        <td>
                            <img src="@item.image_url" width="100" alt="@item.title" />
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Createdon)
                        </td>
                        <td>
                            @Html.ActionLink("Add related images", "AddGallery", new { Eventid = item.id }) |
                            @Html.ActionLink("Add related videos", "AddVideoGallery", new { Eventid = item.id }) 

                        </td>
                    </tr>
                }

            </table>
        </div>
    </div>
</div>