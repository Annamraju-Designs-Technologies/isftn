@model hrithvika.Models.Custom_GalleryEvents

@{
    ViewBag.Title = "AddVideoGallery";
    Layout = "~/Views/Shared/_adminLayout.cshtml";
}

<style>
    .dv {
        min-height: 400px;
    }
</style>

<div class="container-fluid dv">
  
    <div class="row">
        <div class="col-md-12 text-center">
            <h2>Add Videos</h2>

            @using (Html.BeginForm("AddVideoGallery", "Admin", "Post"))
            {
                @Html.AntiForgeryToken()

                <div class="form-horizontal text-left">
                    <hr />

                    @Html.HiddenFor(model => model.eventid)
                    <div class="form-group">
                        <label class="control-label col-md-2">Add Video Url</label>
                        <div class="col-md-10">
                            @Html.EditorFor(model => model.image_url, new { htmlAttributes = new { @class = "form-control" } })
                            @Html.ValidationMessageFor(model => model.image_url, "", new { @class = "text-danger" })
                        </div>
                    </div>
                    <div class="form-group">
                        <div class="col-md-offset-2 col-md-10">
                            <input type="submit" value="Add" class="btn btn-success" />
                        </div>
                    </div>
                </div>
            }


        </div>
    </div>
</div>