@model IEnumerable<hrithvika.Models.custom_Gallery>

@{
    ViewBag.Title = "ListofMainGallery";
    Layout = "~/Views/Shared/_adminLayout.cshtml";
}

<style>
    .dv {
        min-height: 400px;
    }
</style>
<script type="text/javascript" src="https://ajax.googleapis.com/ajax/libs/jquery/1.8.3/jquery.min.js"></script>
<link rel="stylesheet" href="https://ajax.googleapis.com/ajax/libs/jqueryui/1.8.24/themes/smoothness/jquery-ui.css" />
<script type="text/javascript" src="https://ajax.googleapis.com/ajax/libs/jqueryui/1.8.24/jquery-ui.min.js"></script>
<script type="text/javascript">
    $(function () {
        $("#myDataTable").sortable({
            items: 'tr:not(tr:first-child)',
            cursor: 'pointer',
            axis: 'y',
            dropOnEmpty: false,
            start: function (e, ui) {
                ui.item.addClass("selected");
            },
            stop: function (e, ui) {
                ui.item.removeClass("selected");
            },
            receive: function (e, ui) {
                $(this).find("tbody").append(ui.item);
            }
        });
    });
</script>


<div class="container dv">
    <br />
    <br />
    <h1>Video List</h1>
    <div class="row">
        <div class="col-md-12 text-center">
            @using (Html.BeginForm("ListofMainVideos", "Admin", FormMethod.Post))
            {
                <p class="float-left">
                    @Html.ActionLink("Add Videos", "AddMainVideo", "Admin", null, new { @class = "btn btn-primary" })
                </p>
                <p class="float-right">
                    <input type="submit" class="btn btn-success" value="Update Position" />
                </p>
                <table id="myDataTable" class="table table-striped table-hover">
                    <thead class="thead-dark">
                        <tr>

                            <th>
                                Position
                            </th>
                            <th>
                                Video
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.createdon)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.isimportant)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.TYPE)
                            </th>
                            <th></th>
                        </tr>
                    </thead>
                    <tbody>
                        <tr></tr>
                        @foreach (var item in Model)
                        {
                            <tr id="@item.id">

                                <td>
                                    <input type="hidden" name="Mid" value="@item.id" />
                                    @Html.DisplayFor(modelItem => item.rank)
                                </td>
                                <td>
                                    <iframe width="100" height="70" src="@item.path" allowfullscreen="allowfullscreen"
                                            mozallowfullscreen="mozallowfullscreen"
                                            msallowfullscreen="msallowfullscreen"
                                            oallowfullscreen="oallowfullscreen"
                                            webkitallowfullscreen="webkitallowfullscreen"></iframe>
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.createdon)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.isimportant)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.TYPE)
                                </td>
                                <td>
                                    @Html.ActionLink("Edit", "EditVideos", new { id = item.id }, new { @Class = "btn btn-primary" })
                                    @Html.ActionLink("Delete", "deletevideo", new { id = item.id }, new { @Class = "btn btn-danger" })
                                </td>
                            </tr>
                        }
                    </tbody>

                </table>

            }

        </div>
    </div>
</div>

