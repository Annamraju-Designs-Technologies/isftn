@model IEnumerable<hrithvika.Models.custom_Team>

@{
    ViewBag.Title = "TeamList";
    Layout = "~/Views/Shared/_adminLayout.cshtml";
}

<style>
    .dv {
        min-height: 400px;
    }
</style>

<div class="container-fluid dv">
    <div class="row">
        <div class="col-md-12 text-center">
            <h2>Team List</h2>

            <p>
                @Html.ActionLink("Create New Team", "AddTeam", null, new { @class = "btn btn-success" })
            </p>
            <table class="table">
                <tr>
                    <th>
                        @Html.DisplayNameFor(model => model.title)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.link)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.img_url)

                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.createdon)
                    </th>
                    <th>Type</th>
                    <th></th>
                </tr>

                @foreach (var item in Model)
                {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.title)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.link)
                </td>
                <td>
                    <img src="@item.img_url" width="70" />
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.createdon)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.type)
                </td>
                <td>
                    @Html.ActionLink("Delete", "deleteTeam", new { id = item.id }, new { @class = "btn btn-danger" })
                </td>
                <td>
                    @Html.ActionLink("Edit", "AddTeamEdit", new { id = item.id }, new { @class = "btn btn-danger" })
                </td>

            </tr>
                }

            </table>
        </div>
    </div>
</div>

