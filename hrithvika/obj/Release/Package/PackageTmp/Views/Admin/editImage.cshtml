@model hrithvika.Models.custom_Gallery

@{
    ViewBag.Title = "editImage";
    Layout = "~/Views/Shared/_adminLayout.cshtml";
}
<style>
    .dv {
        min-height: 400px;
    }
</style>


<div class="container-fluid dv text-center">
    <h1>Edit Gallery</h1>
    <br />
    <br />
    @using (Html.BeginForm("editConfirm", "Admin", "Post"))
    {
        @Html.AntiForgeryToken()

        <div class="form-horizontal">

            @Html.ValidationSummary(true, "", new { @class = "text-danger" })
            @Html.HiddenFor(model => model.id)

            <img src="@Model.path" width="100" alt="@Model.id" />
            <br />
            <br />
            <div class="checkbox">
                Is Important
                @Html.CheckBoxFor(model => model.isimportant)

            </div>

        </div>

        <br />
        <br />
        <input type="submit" value="Update" class="btn btn-primary" />



    }

    <div>
        @Html.ActionLink("Back to List", "Index")
    </div>

</div>