@model IEnumerable<hrithvika.Models.custom_Team>

@{
    ViewBag.Title = "GetTeam";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container-fluid">
    <div class="row">
        <img width="100%" src="~/Images/indian-army-message.jpg" />
        
    </div>
    <div class="row d-none d-md-block  row_highlight">
        <div class="container">
            <div class="row">
                <div class="col-md-4 text-center">
                    <i style="color:#ff0000" class="fa fa-calendar fa-2x"></i> <a href="/Home/Events"> Events</a>
                </div>
                <div class="col-md-4 text-center">
                    <i style="color:#ff0000" class="fa fa-users fa-2x"> @Html.ActionLink("NGO's", "NGO", "People")</i>
                </div>
                <div class="col-md-4 text-center">
                    <i style="color:#ff0000" class="fa fa-heart fa-2x"> @Html.ActionLink("Enroll", "Create", "People")</i>
                </div>
            </div>
        </div>
    </div>
</div>


<div class="container">
    <div class="row">
        <div class="col-md-12">
            <br />
            <h1 class="text-center">Team</h1>
            <br />
            
               
            <div class="col-md-12 text-center">
                @Html.ActionLink("Sponsor", "GetTeamType", "Home", new { type = "Sponsor" }, new { @class = "btn btn-primary" })
                @Html.ActionLink("Support", "GetTeamType", "Home", new { type = "Support" }, new { @class = "btn btn-primary" })
                @Html.ActionLink("NGO", "GetTeamType", "Home", new { type = "NGO" }, new { @class = "btn btn-primary" })
                <br />
                <br />
                <br />
            </div>
                
            <div class="row">
                @foreach (var item in Model)
                {
                    if (item.title == "Ekam")
                    {
                        <div class="col-md-2">
                            <div class="text-center">
                                <a target="_blank" href="@item.link">
                                    <div style="min-height:100px!important">
                                        <img src="@item.img_url" width="100%" title="@item.title" alt="@item.title" />
                                    </div>
                                    <br />
                                    <br />
                                </a>
                            </div>
                            <br />
                            <br />
                        </div>
                    }
                    else if (item.title == "Annamraju Designs and Technologies")
                    {
                        <div class="col-md-2">
                            <div class="text-center">
                                <a target="_blank" href="@item.link">
                                    <div style="min-height:100px!important">
                                        <img src="@item.img_url" width="50%" title="@item.title" alt="@item.title" />
                                    </div>
                                    <br />
                                    <br />

                                </a>
                            </div>
                            <br />
                            <br />
                        </div>
                    }
                }
                @foreach (var item in Model)
                {
                    if (item.title != "Annamraju Designs and Technologies" && item.title != "Ekam")
                    {
                        <div class="col-md-2">
                            <div class="text-center">
                                <a target="_blank" href="@item.link">
                                    <div style="min-height:100px!important">
                                        <img src="@item.img_url" width="70%" title="@item.title" alt="@item.title" />
                                    </div>
                                    <br />
                                    <br />
                                </a>

                            </div>
                            <br />
                            <br />
                        </div>
                    }
                }
            </div>
        </div>
