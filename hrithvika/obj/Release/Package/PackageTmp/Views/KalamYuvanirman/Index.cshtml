@model IEnumerable<hrithvika.Models.custom_yuvanirman>

@{

    Layout = "~/Views/Shared/_Layout.cshtml";
}
<style>
    .bgdiv h5 {
        font-family: 'customfontbold';
        opacity: 0.7
    }

    body {
        background: #f7f7f7
    }

    .right {
    }

    .dvtitlecards {
        margin-top: -57px;
        margin-left: 6px;
        position: absolute;
        background: rgba(255, 76, 0,0.9);
        color: #ffffff !important;
        padding: 5px;
        font-family: cardtitle;
        font-size: 12px !important;
        text-transform: uppercase;
        color: #ffffff;
        letter-spacing: 0.7px;
    }
    .background_white a {
         color:#fff!important; 
    }
    .background_white a :hover {
        color: #fff !important;
    }
    .img-thumbnail {
        padding: .25rem;
        background-color: #fff;
        border: 1px solid #dee2e6;
        border-radius: .25rem;
        max-width: 100%;
        min-height: 160px;
    }
</style>
<div class="container-fluid">
    <div class="row">
        <img width="100%" src="~/Images/yuvanirman.jpg" />
        @*<div class="Create_yuvanirman_btn">
            </div>*@
        <div class="telegram_dv_normal">
            " <b>1</b>  DAY  &nbsp;<b>1</b> MINUTE
            <br />
            FOR OUR BRAVE HEARTS
            <br />
            IS IT TOO MUCH TO ASK FOR ? "

        </div>

    </div>
    <div class="row d-none d-md-block  row_highlight">
        <div class="container">
            <div class="row">
                <div class="col-md-4 text-center">
                    <i style="color:#ff0000" class="fa fa-calendar fa-2x"></i> <a href="/Home/Events"> Events</a>
                </div>
                <div class="col-md-4 text-center">
                    <i style="color:#ff0000" class="fa fa-users fa-2x"> @Html.ActionLink("NGO's", "NGO", "People")</i>
                </div>
                <div class="col-md-4 text-center">
                    <i style="color:#ff0000" class="fa fa-heart fa-2x"> @Html.ActionLink("Enroll", "Create", "People")</i>
                </div>
            </div>
        </div>
    </div>
</div>
<div class="background_white customc">
    <div class="container">
        <br />
        <br />
        <h1 style="font-family:cardtitle!important" class="text-left">Kalam Yuva Nirman</h1>
        <br />
        <p>If you are different from others and have high dreams, join us and make your dreams come true. Never give up on what you really want to do. The person with big dreams or innovative Ideas is more powerful than one with all the facts.  This site makes your ideas available to a large selection of people who are interested in making a difference. A must-see and participation for anyone and everyone.</p>

        <p text-center>Nominations will close by Jan 5th 2020</p>

        <br />

        @Html.ActionLink("Pre Registration", "Create", "KalamYuvanirman", null, new { @class = "btn btn-primary loginbtn" })
        @Html.ActionLink("Submit Project", "Create_yuvanirman", "People", null, new { @class = "btn btn-primary loginbtn" })
        <br />  <br />


        <p>Who can participate: Any Indian citizen from any academic background (BPO/MNC, Automobiles, IT, AI, ML, Graduate, Hotel Management, Govt employees, etc)</p>
        <br />

    </div>
</div>

<div class="container-fluid background_about_third">
    <div class="row">
        <div class="col-md-6 d-none d-md-block">
            <br /><br /><br /><br /><br /><br />
        </div>
        <div class="col-md-6 text-center" data-aos="fade-up">
            <br />
            <br />
            <h2 class="text-center" style="font-family:cardtitle">"People Dont Like me <br /> because I am different. <br />I dont like them because <br /> they are all same"</h2>
            <br />
            @Html.ActionLink("Submit Project", "Create_yuvanirman", "People", null, new { @class = "btn btn-primary loginbtn" })
            <br />
            <br />
            <br />
        </div>

    </div>
</div>


<div class="background_white">
    <div class="container">
        <br />
        <h1 style="font-family:cardtitle!important">Participants</h1>
        <br />
        <div class="row">

            @ViewBag.title

            @foreach (var item in Model)
            {
                <div class="col-md-3 ">

                    @if (item.orglogo != null)
                    {
                        <img src="@item.orglogo" width="100%"  max-height="250px" alt="@item.lastname" class="img-thumbnail" />
                        @*<label style="text-transform:capitalize" class="dvtitlecards">@item.lastname</label>*@
                    }
                    else
                    {
                        <img src="~/Images/banner.jpg" width="100%" alt="@item.lastname" class="img-thumbnail" />

                    }
                    <div class="row">
                        <div class="col-md-12">
                            <br />
                            <label class="dvtitlecards">@item.lastname</label>

                            @Html.ActionLink("Know more", "yuvanirmanDetails", "Home", new { eventID = item.id }, new { @class = "btn btn-success" })
                            <br />

                        </div>
                    </div>
                    <br />
                    <br />

                </div>
                <br />
            }

        </div>

    </div>
</div>


